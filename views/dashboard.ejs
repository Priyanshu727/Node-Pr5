<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/swiper@latest/swiper-bundle.min.js"></script>



    <style>
        /* Custom scrollbar styles */
        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }

        .scrollbar-hide {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }

        .swiper-container {
            overflow: hidden;
        }

        .swiper-slide {
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>

<body class="bg-black text-white">
    <!-- Sidebar -->
    <aside class="fixed top-0 left-0 h-full w-64 bg-black bg-opacity-75 p-4">
        <div class="flex items-center space-x-4 mb-8">
            <img src="https://w7.pngwing.com/pngs/939/100/png-transparent-roronoa-zoro-monkey-d-luffy-one-piece-pirate-warriors-one-piece-unlimited-cruise-one-piece-world-seeker-one-piece-zoro-logo-text-manga-logo.png"
                alt="Zoro To" class="w-28">
        </div>
        <nav>
            <ul class="space-y-4">
                <li><a href="#" class="hover:text-gray-300 block">Home</a></li>
                <li><a href="/add_movie" class="hover:text-gray-300 block"> Add Movies</a></li>
                <li><a href="#" class="hover:text-gray-300 block">Latest</a></li>
                <li><a href="#" class="hover:text-gray-300 block">My List</a></li>
            </ul>
        </nav>
    </aside>

    <!-- Main Content -->
    <main class="ml-64">
        <!-- Hero Section -->
        <div class="swiper swiper-container">
            <div class="swiper-wrapper">
                <% moviesData.map((movie)=> { %>
                    <section class="swiper-slide relative h-screen bg-cover bg-center w-full md:w-1/3 lg:w-1/4">
                        <img src="<%= movie.image %>" class="w-full h-auto object-cover" alt="">
                        <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>
                        <div class="absolute bottom-0 p-8 space-y-4 text-center">
                            <h1 class="text-6xl font-bold">
                                <%= movie.movie_name %>
                            </h1>
                            <p class="max-w-xl">
                                <%= movie.movie_disc %>
                            </p>
                            <div class="space-x-2 flex justify-center">
                                <button class="px-4 py-2 bg-white text-black font-semibold rounded">Play</button>
                                <button
                                    class="px-4 py-2 bg-gray-700 bg-opacity-50 text-white font-semibold rounded">More
                                    Info</button>
                            </div>
                        </div>
                    </section>
                    <% }) %>
            </div>
            <div class="swiper-pagination swiper-pagination-bullet"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>

        <!-- Movie Grid -->
        <section class="p-8">
            <h2 class="text-2xl font-semibold mb-4">RATING</h2>
            <div class="flex flex-wrap">
                <% moviesData.map((movie)=> { %>
                    <div class="w-full md:w-1/2 lg:w-1/3 px-4 mb-8">
                        <div class="relative">
                            <img src="<%= movie.image %>" alt="Movie" class="w-full h-auto">
                            <div class="">
                                <h1 class="font-semibold">
                                    <%= movie.movie_name %>
                                        <br>
                                        <%= movie.movie_ratings %>
                                </h1>
                            </div>
                            <div
                                class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 hover:opacity-100 transition-opacity">
                                <a href="/update_Movie?id=<%= movie._id %>"
                                    class="px-4 py-2 bg-amber-200 text-black me-2 font-semibold rounded">Edit</a>
                                <a href="/deleteMovie?id=<%= movie._id %>"
                                    class="px-4 py-2 bg-red-800 text-black font-semibold rounded">Delete</a>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </section>

    </main>
</body>
<script>
    const swiper = new Swiper('.swiper-container', {
        // Swiper options here
        slidesPerView: 1,
        spaceBetween: 20,
        autoplay: {
            delay: 2000,
            disableOnInteraction: false,
        },
        pagination: {
            el: '.swiper-pagination-bullet',
        },
        // Optional navigation arrows
        navigation: {
            nextEl: '.swiper-button-next',
            prevEl: '.swiper-button-prev',
        },
        // ... other desired options
    });
</script>

</html>